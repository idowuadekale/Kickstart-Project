@model LoginViewModel

@{ 
    ViewBag.Title = "User Login";
}

<div class="container">
    <div class="row">

        <div class="vl">
            <span class="vl-innertext">Login</span>
        </div>

        <div class="col-md-6">
            <div class="m-5">
                <h1>Local Account Login</h1>
                <hr />
                <form method="post">
                    <div class="text-danger" asp-validation-summary="All"></div>

                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input class="form-control" asp-for="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input class="form-control" asp-for="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="custom-checkbox">
                            <label asp-for="RememberMe">
                                <input asp-for="RememberMe" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>

                    <div class="clearfix">
                        <a class="login-forgot float-right" asp-action="ForgotPassword">Forgot Password?</a>
                    </div>
                    <div class="mx-auto">
                        <button type="submit" class="button">Login</button>
                    </div>

                </form>
            </div>
        </div>

        <div class="col-md-6">
            <div class="m-5">
                <h2>Login with Google</h2>
                <hr />
                @{
                    if (Model.ExternalLogins.Count == 0)
                    {
                        <div>No external logins configured</div>
                    }
                    else
                    {
                        <form method="post" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl">
                            <div>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="button"  name="provider" value="@provider.Name"
                                            title="Login using your @provider.DisplayName account">
                                        @provider.DisplayName
                                    </button>
                                }
                            </div>

                        </form>
                    }
                }
            </div>
        </div>

    </div>
</div>